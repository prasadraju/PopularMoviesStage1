<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

     >

    <View
        android:layout_width="match_parent"
        android:layout_height="114dip"
        android:id="@+id/movieTitleBgView"
        android:background="@color/movieTitleBg"/>

    <TextView
        android:id="@+id/movieTitle"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:textSize="@dimen/movieTitleSize"
        android:textColor="@color/white"
        android:paddingTop="48dip"
        android:paddingLeft="24dip"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/poster_icon"
        android:layout_below="@+id/movieTitleBgView"
        android:layout_width="172dip"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="18dip"
        android:background="@drawable/placeholder"
        android:layout_height="196dip"
        android:contentDescription="@null" />

    <!--String overview;-->
    <!--String release_date;-->

    <!--String original_title;-->

    <!--double vote_average;-->

    <!--double  popularity;-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitleBgView"
        android:layout_toRightOf="@+id/poster_icon"
        android:layout_marginTop="18dip"
        android:layout_marginRight="8dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="@dimen/movieLabelSize"

            />

        <TextView
        android:id="@+id/popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="popularity"
        android:textSize="@dimen/movieLabelSize"

        />
        <TextView
        android:id="@+id/voteAvarage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voteAvarage"
        android:textSize="@dimen/movieLabelSize"

        />

        <TextView
            android:id="@+id/markAsFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MARK AS FAVORATE"
            android:padding="8dip"
            android:background="@color/movieTitleBg"
            android:textSize="@dimen/movieLabelSize"

            />
    </LinearLayout>



    <TextView
        android:layout_below="@+id/poster_icon"
       android:layout_marginTop="16dip"
        android:id="@+id/overview"
        android:padding="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        />

    <View
        android:id="@+id/lineView"
        android:layout_below="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_margin="8dip"
        android:background="@color/black"/>

    <TextView
        android:layout_below="@+id/overview"
        android:layout_marginTop="16dip"
        android:id="@+id/trailorsHeaderview"
        android:padding="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailors : "
        />

    <TextView
        android:layout_below="@+id/trailorsHeaderview"
        android:layout_marginTop="16dip"
        android:id="@+id/trailor1"
        android:paddingTop="8dip"
        android:drawableLeft="@drawable/play"
        android:layout_marginLeft="56dip"
        android:layout_marginBottom="16dip"
        android:drawablePadding="48dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trailor 1"
        />

    <View
        android:id="@+id/lineView1"
        android:layout_below="@+id/trailor1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_margin="8dip"
        android:background="@color/black"/>

    <TextView
        android:layout_below="@+id/lineView1"
        android:layout_marginTop="16dip"
        android:id="@+id/trailor2"
        android:paddingTop="8dip"
        android:layout_marginBottom="8dip"
        android:drawableLeft="@drawable/play"
        android:layout_marginLeft="56dip"
        android:drawablePadding="48dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trailor 2"
        />






</RelativeLayout>
</ScrollView>